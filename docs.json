{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "EPayClub",
  "description": "EPayClub is a payment platform that allows users to send and receive money easily and securely.",
  "colors": {
    "primary": "#3A506B",
    "light": "#6FFFE9",
    "dark": "#3A506B"
  },
  "favicon": "/epay-favicon.png",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Get Started",
            "pages": [
              "introduction",
              "getting-started"
            ]
          },
          {
            "group": "Use Cases",
            "pages": [
              "use-cases/retail",
              "use-cases/fintech",
              "use-cases/travel"
            ]
          },
          {
            "group": "API Basics",
            "pages": [
              "api-basics/authorization",
              "api-basics/encryption",
              "api-basics/webhooks",
              "api-basics/testing"
            ]
          },
          {
            "group": "Orders",
            "pages": [
              "orders/create-orders",
              "orders/query-fees",
              "orders/verify-orders"
            ]
          },
          {
            "group": "Payments",
            "pages": [
              "payments/cards"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "API Documentation",
            "pages": [
              "api-reference/introduction",
              "api-reference/headers",
              "api-reference/errors",
              "api-reference/api-glossary"
            ]
          },
          {
            "group": "Orders",
            "pages": [
              "api-reference/orders/create",
              "api-reference/orders/fee",
              "api-reference/orders/pay",
              "api-reference/orders/order-status",
              "api-reference/orders/verify-order",
              "api-reference/orders/timeline"
