        "groups": [
          {
            "group": "API Documentation",
            "pages": [
              "api-reference/introduction",
              "api-reference/headers",
              "api-reference/errors",
              "api-reference/api-glossary"
            ]
          },
          {
            "group": "Orders",
            "pages": [
              "api-reference/orders/create",
              "api-reference/orders/fee",
