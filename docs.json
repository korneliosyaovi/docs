  "background": {
    "color": {
      "light": "#ffffff",
      "dark": "#0B132B"
    }
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@epayclub.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://merchant.epayclub.com/auth/signin"
    }
  },
  "api": {
    "mdx": {
      "server": "https://checkout-api-service.epayclub.com",
      "auth": {
        "method": "key",
        "name": "api-key"
      }
    }
