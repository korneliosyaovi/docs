              "api-basics/authorization",
              "api-basics/encryption",
              "api-basics/webhooks",
              "api-basics/testing"
            ]
          },
          {
            "group": "Orders",
            "pages": [
              "orders/create-orders",
              "orders/query-fees",
              "orders/verify-orders"
            ]
          },
          {
            "group": "Payments",
            "pages": [
              "payments/cards",
              "payments/payment-link"
            ]
          }
        ]
      },
      {
