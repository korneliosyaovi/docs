          },
          {
            "group": "Payment Operations",
            "pages": [
              "api-reference/payment-operations/bank-codes"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Support",
          "href": "mailto:support@epayclub.com",
          "icon": "headset"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/logo.png",
    "dark": "/logo/logo-dark.png"
  },
  "background": {
    "color": {
      "light": "#ffffff",
      "dark": "#0B132B"
    }
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@epayclub.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://google.com"
    }
  },
  "api": {
    "mdx": {
      "server": "https://checkout-api-service.devepayclub.com/",
      "auth": {
        "method": "key",
        "name": "api-key"
      }
    }
  }
